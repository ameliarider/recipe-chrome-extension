{
  "manifest_version": 3,
  "name": "Recipe Text Pinner",
  "version": "1.0",
  "description": "Paste text and pin it to the top of the page.",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "apple-touch-icon.png",
      "48": "apple-touch-icon.png",
      "128": "apple-touch-icon.png"
    }
  }
}